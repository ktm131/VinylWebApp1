@model VinylWebApp1.Models.User1

@{
    ViewData["Title"] = "Create";
}

<h1><img width="37" height="37" style="margin-bottom:7px;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT2aeSka-sRGn18Fg33wH-a19Fv8hxb2k92tSrE0tui6wPikUYzrbNs6MuSvIkrwQeeGlM&usqp=CAU" />Utwórz</h1>

<h4>Użytkownik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
