@model VinylWebApp1.Models.VinylReservation

@{
    ViewData["Title"] = "Create";
}

<h1>Rezerwuj</h1>

<h4>Zarezerwuj</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserve">
            <input type="hidden" asp-for="VinylId" class="control-label" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeliveryTypeId" class="control-label"></label>
                <select asp-for="DeliveryTypeId" class="form-control" asp-items="ViewBag.DeliveryTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Return" class="control-label"></label>
                <select asp-for="Return" asp-items="Html.GetEnumSelectList<Return>()" class="form-control">
                </select>
                <span asp-validation-for="Return" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label"></label>
                <select asp-for="Payment" asp-items="Html.GetEnumSelectList<Payment>()" class="form-control">
                </select>
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

